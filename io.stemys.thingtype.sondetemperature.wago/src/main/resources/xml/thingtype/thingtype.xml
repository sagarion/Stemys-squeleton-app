<?xml version="1.0" encoding="UTF-8"?>
<thingtype:thingType binding="io.stemys.binding.sondetemperature" id="io.stemys.thingtype.sondetemperature.wago"
					 xmlns:thingtype="http://stemys.io/thingtype" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
					 xsi:schemaLocation="http://stemys.io/thingtype thingType.xsd ">
	<name>Sonde Temperature</name>
	<author>Luna Kottelat</author>
	<version>0.0.1-SNAPSHOT</version>
	<schedulers>
		<scheduler type="recurrent" id="scheduler-1">
			<time>1</time>
			<unit>SECONDS</unit>
		</scheduler>
	</schedulers>

	<mode>
		<read>thing</read>
		<config>modbus-1</config>
		<schedulerId>scheduler-1</schedulerId>
	</mode>
	<items>
		<item itemTypeId="temperature" id="temperature" schedulerId="scheduler-1">
			<defaultValue>0</defaultValue>
			<read id="" config="modbus-1">
				<value>
					<parameters>
						<parameter id="OFFSET">0</parameter>
						<parameter id="LENGTH">16</parameter>
					</parameters>
				</value>
			</read>
		</item>
	</items>
	<configs>
		<config protocolId="io.stemys.protocol.modbus" id="modbus-1">
			<parameters>
				<parameter id="READ_METHOD">READ_HOLDING_REGISTER</parameter>
				<parameter id="UNITID">1</parameter>
				<parameter id="LENGTH">16</parameter>
			</parameters>
		</config>
	</configs>
</thingtype:thingType>

