<tns:binding id="io.stemys.binding.smartfactory" xmlns:tns="http://stemys.io/agent"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://stemys.io/agent binding.xsd ">
	<name>Smartfactory</name>
	<itemForUniqueId/>
	<class>io.stemys.binding.smartfactory.model.Smartfactory</class>
	<description>Binding dedicated to the smartfactory test controller</description>
	<author>Daucourt Thibault 08.12.2019</author>
	<version>0.0.3</version>


	<!-- définition des métriques -->
	<itemsTypes>
		<!-- métrique EmergencyState -->
		<itemType id="emergencyState">
			<name>EmergencyState</name>
			<type>single</type>
			<description>State of emergency activated or not on the smartfactory controler</description>
			<defaultValue>false</defaultValue>
			<dataType>boolean</dataType>
			<variables/>
			<commands/>
		</itemType>

